mixin videoPlayer (video = {} )
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.fileUrl}`, controls=false)
        .videoPlayer__gradientbox
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                |&nbsp;&nbsp; 00:00 / 10:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullscreenButton
                    i.fas.fa-expand