mixin videoPlayer (video = {} )
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.fileUrl}`, controls=false)
        .videoPlayer__gradientbox
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                span#jsVolumeButton
                    i.fas.fa-volume-up
                    input.videoPlayer__volume#jsVolume(type="range", min=0, max=1, step=0.05)
                span &nbsp;&nbsp; 
                span#jsCurrentPosition 00:00:00 
                span &nbsp;/&nbsp; 
                span#jsVideoLength 00:00:00
            
            .videoPlayer__column
                span#jsFullscreenButton
                    i.fas.fa-expand