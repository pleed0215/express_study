mixin videoPlayer (video = {} )
    .videoPlayer
        video(src=`/${video.fileUrl}`, controls=false)
        .videoPlayer__gradientbox
        .videoPlayer__controls
            .videoPlayer__column
                span
                    i.fas.fa-volume-up
                span
                |&nbsp;&nbsp; 00:00 / 10:00
            .videoPlayer__column
                span
                    i.fas.fa-play
            .videoPlayer__column
                span
                    i.fas.fa-expand